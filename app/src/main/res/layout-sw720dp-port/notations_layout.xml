<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#3ec7f5"
    android:padding="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_width="25dp"
        android:id="@+id/cancelButton"
        android:src="@drawable/ic_action_cancel"
        android:layout_gravity="end"
        android:layout_height="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:text="@string/notations"
        android:textSize="19sp"
        android:id="@+id/tittleTextView"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/white"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/bodyTextView"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:text="This is body This is body  This is body This is body This is body This is body This is body This is body This is body This is body This is body This is body This is body This is body This is body This is body This is body This is body This is body This is body "
        android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>