<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393d3e"
    tools:context=".ui.home.interactiveguide.industrialship.IndustrialShipFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:id="@+id/centerLayout"
            android:layout_height="500dp">
            <ImageView
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_industiral_ship"
                android:layout_height="match_parent" />

            <ImageView
                android:src="@drawable/un_active_round_button"
                android:layout_width="30dp"
                android:scaleType="fitXY"
                android:id="@+id/button1"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="370dp"
                android:layout_height="30dp" />
            <ImageView
                android:src="@drawable/un_active_round_button"
                android:layout_width="30dp"
                android:scaleType="fitXY"
                android:id="@+id/button2"
                android:layout_marginLeft="290dp"
                android:layout_marginTop="420dp"
                android:layout_height="30dp" />

            <ImageView
                android:id="@+id/button3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="390dp"
                android:layout_marginTop="180dp"
                android:scaleType="fitXY"
                android:src="@drawable/un_active_round_button" />

            <ImageView
                android:id="@+id/button4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="470dp"
                android:layout_marginTop="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/un_active_round_button" />

            <ImageView
                android:id="@+id/button5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="380dp"
                android:scaleType="fitXY"
                android:src="@drawable/un_active_round_button" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/industrial_ship"
                android:textColor="@color/colorAccent"
                android:textSize="28sp"
                android:layout_gravity="end"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_below="@id/centerLayout"

            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Tittle"
                android:id="@+id/tittleTextView"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_height="wrap_content">
            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recyclerView"
                android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"></LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</androidx.core.widget.NestedScrollView>