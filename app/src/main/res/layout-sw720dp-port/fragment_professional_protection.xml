<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#393d3e"
    android:layout_height="match_parent"
    tools:context=".ui.home.interactiveguide.professionalprotection.ProfessionalProtectionFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_marginTop="100dp"
            android:id="@+id/centerLayout"
            android:layout_height="450dp">
            <ImageView
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/img_professional_protection"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/button1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="445dp"
                android:layout_marginTop="140dp"
                android:scaleType="fitXY"
                android:src="@drawable/un_active_round_button" />

            <ImageView
                android:id="@+id/button2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="445dp"
                android:layout_marginTop="350dp"
                android:scaleType="fitXY"
                android:src="@drawable/un_active_round_button" />

            <ImageView
                android:id="@+id/button3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="560dp"
                android:layout_marginTop="220dp"
                android:scaleType="fitXY"
                android:src="@drawable/un_active_round_button" />


        </FrameLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="50dp"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profesional_protection"
                android:textColor="@color/colorAccent"
                android:textSize="28sp"
                android:layout_gravity="end"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guide"
                android:visibility="gone"
                android:layout_marginTop="-8dp"
                android:layout_gravity="end"
                android:textColor="@color/white"
                android:textSize="23sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"

            android:layout_below="@id/centerLayout"

            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Tittle"
                android:id="@+id/tittleTextView"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_height="wrap_content">
            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recyclerView"
                android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"></LinearLayout>
        </LinearLayout>
    </RelativeLayout>


</androidx.core.widget.NestedScrollView>