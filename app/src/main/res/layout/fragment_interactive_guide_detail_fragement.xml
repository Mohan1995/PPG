<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393d3e"
    android:clickable="false"
    android:animateLayoutChanges="true"
    tools:context="com.nauroo.ppg.ui.home.interactiveguide.maritimo.MaritimoFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="end"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maritime_4"
                android:textColor="@color/colorAccent"
                android:textSize="28sp"
                android:layout_gravity="end"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guide"
                android:visibility="gone"
                android:layout_marginTop="-8dp"
                android:layout_gravity="end"
                android:textColor="@color/white"
                android:textSize="23sp" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/centerLayout"
        android:layout_height="250dp">
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/interactive_guide_background_1"
            android:layout_height="match_parent" />

        <ImageView
            android:src="@drawable/un_active_round_button"
            android:layout_width="20dp"
            android:scaleType="fitXY"
            android:id="@+id/button1"
            android:layout_marginTop="110dp"
            android:layout_marginLeft="40dp"
            android:layout_height="20dp" />
        <ImageView
            android:src="@drawable/un_active_round_button"
            android:layout_width="20dp"
            android:id="@+id/button2"
            android:scaleType="fitXY"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="160dp"
            android:layout_height="20dp" />
        <ImageView
            android:src="@drawable/un_active_round_button"
            android:layout_width="20dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="180dp"
            android:id="@+id/button3"
            android:layout_height="20dp" />
        <ImageView
            android:src="@drawable/un_active_round_button"
            android:layout_width="20dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="160dp"
            android:id="@+id/button4"
            android:layout_height="20dp" />
        <ImageView
            android:src="@drawable/un_active_round_button"
            android:layout_width="20dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="240dp"
            android:id="@+id/button5"
            android:layout_marginTop="190dp"
            android:layout_height="20dp" />
        <ImageView
            android:src="@drawable/un_active_round_button"
            android:layout_width="20dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="270dp"
            android:id="@+id/button6"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:layout_height="20dp" />
        <ImageView
            android:src="@drawable/un_active_round_button"
            android:layout_width="20dp"
            android:scaleType="fitXY"
            android:layout_marginTop="60dp"
            android:id="@+id/button7"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_height="20dp" />
        <ImageView
            android:src="@drawable/un_active_round_button"
            android:layout_width="20dp"
            android:scaleType="fitXY"
            android:id="@+id/button8"
            android:layout_marginLeft="10dp"
            android:layout_height="20dp" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="Tittle"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:id="@+id/tittleTextView"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_height="wrap_content">
        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recyclerView"
            android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"></LinearLayout>
    </LinearLayout>


</LinearLayout>
</ScrollView>