<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393d3e"
    android:scrollbars="none"
    tools:context="com.nauroo.ppg.ui.home.interactiveguide.mineria.MineriaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/centerLayout"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/mineria_interactive_guide_page" />

        <ImageView
            android:id="@+id/button1"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="70dp"
            android:scaleType="fitXY"
            android:src="@drawable/un_active_round_button_1" />

        <ImageView
            android:id="@+id/button2"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="250dp"
            android:scaleType="fitXY"
            android:src="@drawable/un_active_round_button_1" />

        <ImageView
            android:id="@+id/button3"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="185dp"
            android:scaleType="fitXY"
            android:src="@drawable/un_active_round_button_1" />

        <ImageView
            android:id="@+id/button4"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="105dp"
            android:scaleType="fitXY"
            android:src="@drawable/un_active_round_button_1" />

        <ImageView
            android:id="@+id/button5"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="185dp"
            android:scaleType="fitXY"
            android:src="@drawable/un_active_round_button_1" />

        <ImageView
            android:id="@+id/button6"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="end"
            android:layout_marginRight="150dp"
            android:layout_marginTop="250dp"
            android:scaleType="fitXY"
            android:src="@drawable/un_active_round_button_1" />

        <ImageView
            android:id="@+id/button7"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="right"
            android:layout_marginRight="75dp"
            android:layout_marginTop="265dp"
            android:scaleType="fitXY"
            android:src="@drawable/un_active_round_button_1" />

        <ImageView
            android:id="@+id/button8"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="right"
            android:layout_marginRight="170dp"
            android:layout_marginTop="130dp"
            android:scaleType="fitXY"
            android:src="@drawable/un_active_round_button_1" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/mining_6"
            android:textColor="@color/colorAccent"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="-8dp"
            android:text="@string/guide"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:visibility="gone" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/centerLayout"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tittleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Tittle"
                android:paddingBottom="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="15dp"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                android:textStyle="bold"></TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recyclerView"
                android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:id="@+id/titleLayout2"
                android:layout_marginTop="15dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tittleTextView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Tittle"
                    android:paddingBottom="15dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp"
                    android:textStyle="bold"></TextView>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/recyclerView2"
                    android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"></LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
