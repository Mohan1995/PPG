<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393d3e"
    android:clickable="false"
    android:scrollbars="none"
    tools:context="com.nauroo.ppg.ui.home.interactiveguide.maritimo.MaritimoFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_gravity="end"
            android:gravity="end"
            android:layout_marginTop="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maritime_4"
                android:textColor="@color/colorAccent"
                android:textSize="28sp"
                android:layout_gravity="end"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/guide"
                android:visibility="gone"
                android:layout_marginTop="-8dp"
                android:layout_gravity="end"
                android:textColor="@color/white"
                android:textSize="23sp" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/centerLayout"
        android:layout_height="500dp">
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/interactive_guide_background_1"
            android:layout_height="match_parent" />

        <ImageView
            android:src="@drawable/un_active_round_button"
            android:layout_width="30dp"
            android:scaleType="fitXY"
            android:id="@+id/button1"
            android:layout_marginTop="220dp"
            android:layout_marginLeft="60dp"
            android:layout_height="30dp" />
        <ImageView
            android:src="@drawable/un_active_round_button"
            android:layout_width="30dp"
            android:id="@+id/button2"
            android:scaleType="fitXY"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="330dp"
            android:layout_height="30dp" />
        <ImageView
            android:src="@drawable/un_active_round_button"
            android:layout_width="30dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="370dp"
            android:id="@+id/button3"
            android:layout_height="30dp" />
        <ImageView
            android:src="@drawable/un_active_round_button"
            android:layout_width="30dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="390dp"
            android:layout_marginTop="320dp"
            android:id="@+id/button4"
            android:layout_height="30dp" />
        <ImageView
            android:src="@drawable/un_active_round_button"
            android:layout_width="30dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="390dp"
            android:id="@+id/button5"
            android:layout_marginTop="390dp"
            android:layout_height="30dp" />
        <ImageView
            android:src="@drawable/un_active_round_button"
            android:layout_width="30dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="450dp"
            android:id="@+id/button6"
            android:layout_gravity="bottom"
            android:layout_marginBottom="30dp"
            android:layout_height="30dp" />
        <ImageView
            android:src="@drawable/un_active_round_button"
            android:layout_width="30dp"
            android:scaleType="fitXY"
            android:layout_marginTop="130dp"
            android:id="@+id/button7"

            android:layout_gravity="right"
            android:layout_marginRight="40dp"
            android:layout_height="30dp" />
        android:src="@drawable/un_active_round_button" />
        <ImageView
            android:src="@drawable/un_active_round_button"
            android:layout_width="40dp"
            android:scaleType="fitXY"
            android:id="@+id/button8"
            android:layout_marginLeft="20dp"
            android:layout_height="40dp" />
    </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"

            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Tittle"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:id="@+id/tittleTextView"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_height="wrap_content">
            </TextView>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recyclerView"
                android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"></LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
