<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#393d3e"
    tools:context="com.nauroo.ppg.ui.home.interactiveguide.gas_de_petroleo.GasDePetrolFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_gravity="end"
        android:gravity="end"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/oil_gas_complement"
            android:gravity="right"
            android:textColor="@color/colorAccent"
            android:textSize="28sp"
            android:layout_gravity="end"
            android:textStyle="bold" />


    </LinearLayout>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/centerLayout"
        android:layout_height="500dp">
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/gas_y_petrol_image"
            android:layout_height="match_parent" />

        <ImageView
            android:src="@drawable/un_active_round_button"
            android:layout_width="30dp"
            android:scaleType="fitXY"
            android:id="@+id/button1"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="100dp"
            android:layout_height="30dp" />
        <ImageView
            android:id="@+id/button2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="320dp"
            android:scaleType="fitXY"
            android:src="@drawable/un_active_round_button" />
        <ImageView
            android:src="@drawable/un_active_round_button"
            android:layout_width="30dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="410dp"
            android:layout_marginTop="350dp"
            android:id="@+id/button3"
            android:layout_height="30dp" />
        <ImageView
            android:src="@drawable/un_active_round_button"
            android:layout_width="30dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="480dp"
            android:layout_marginTop="320dp"
            android:id="@+id/button4"
            android:layout_height="30dp" />
        <ImageView
            android:src="@drawable/un_active_round_button"
            android:layout_width="30dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="540dp"
            android:layout_marginTop="290dp"
            android:id="@+id/button5"
            android:layout_height="30dp" />


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/centerLayout"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="Tittle"
            android:id="@+id/tittleTextView"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:gravity="center"
            android:layout_height="wrap_content">
        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recyclerView"
            android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"></LinearLayout>
    </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
