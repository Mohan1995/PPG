<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#393d3e"
    android:layout_height="match_parent"
    tools:context="com.nauroo.ppg.ui.home.interactiveguide.mineria.MineriaFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:id="@+id/centerLayout"
        android:layout_height="500dp">
        <ImageView
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/mineria_interactive_guide_page"
            android:layout_height="match_parent" />

        <ImageView
            android:src="@drawable/un_active_round_button_1"
            android:layout_width="33dp"
            android:scaleType="fitXY"
            android:id="@+id/button1"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="90dp"
            android:layout_height="33dp" />
        <ImageView
            android:src="@drawable/un_active_round_button_1"
            android:layout_width="33dp"
            android:scaleType="fitXY"
            android:id="@+id/button2"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="350dp"
            android:layout_height="33dp" />
        <ImageView
            android:src="@drawable/un_active_round_button_1"
            android:layout_width="33dp"
            android:scaleType="fitXY"
            android:id="@+id/button3"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="260dp"
            android:layout_height="33dp" />
        <ImageView
            android:src="@drawable/un_active_round_button_1"
            android:layout_width="30dp"
            android:id="@+id/button4"
            android:scaleType="fitXY"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="150dp"
            android:layout_height="30dp" />
        <ImageView
            android:src="@drawable/un_active_round_button_1"
            android:layout_width="33dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="260dp"
            android:id="@+id/button5"
            android:layout_height="33dp" />
        <ImageView
            android:src="@drawable/un_active_round_button_1"
            android:layout_width="33dp"
            android:scaleType="fitXY"
            android:layout_gravity="end"
            android:layout_marginRight="250dp"
            android:layout_marginTop="370dp"
            android:id="@+id/button6"
            android:layout_height="33dp" />
        <ImageView
            android:src="@drawable/un_active_round_button_1"
            android:layout_width="33dp"
            android:scaleType="fitXY"
            android:layout_gravity="right"
            android:layout_marginRight="130dp"
            android:id="@+id/button7"
            android:layout_marginTop="380dp"
            android:layout_height="33dp" />
        <ImageView
            android:src="@drawable/un_active_round_button_1"
            android:layout_width="33dp"
            android:scaleType="fitXY"
            android:layout_gravity="right"
            android:layout_marginRight="270dp"
            android:id="@+id/button8"
            android:layout_marginTop="180dp"
            android:layout_height="33dp" />
    </FrameLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mining_6"
            android:textColor="@color/colorAccent"
            android:textSize="28sp"
            android:layout_gravity="end"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guide"
            android:visibility="gone"
            android:layout_marginTop="-8dp"
            android:layout_gravity="end"
            android:textColor="@color/white"
            android:textSize="23sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_below="@id/centerLayout"

        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:text="Tittle"
            android:id="@+id/tittleTextView"
            android:textColor="@color/colorAccent"
            android:textSize="17sp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_height="wrap_content">
        </TextView>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:id="@+id/recyclerView"
            android:layout_height="wrap_content">
        </androidx.recyclerview.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/titleLayout2"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:text="Tittle"
                android:id="@+id/tittleTextView2"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                android:paddingLeft="15dp"
                android:paddingTop="15dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_height="wrap_content">
            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recyclerView2"
                android:layout_height="wrap_content">
            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"></LinearLayout>
    </LinearLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
