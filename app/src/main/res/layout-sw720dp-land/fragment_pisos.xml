<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#393d3e"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.nauroo.ppg.ui.home.interactiveguide.pisos.PisosFragment">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="end"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pisos"
            android:textColor="@color/colorAccent"
            android:textSize="28sp"
            android:layout_gravity="end"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guide"
            android:visibility="gone"
            android:layout_marginTop="-8dp"
            android:layout_gravity="end"
            android:textColor="@color/white"
            android:textSize="23sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="30dp"
        android:layout_height="400dp">
        <FrameLayout
            android:layout_width="0dp"
            android:id="@+id/centerLayout"
            android:layout_weight="1.2"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="600dp"
                android:scaleType="fitXY"
                android:src="@drawable/pisos_interactive_guide"
                android:layout_height="match_parent" />

            <ImageView
                android:src="@drawable/un_active_round_button"
                android:layout_width="30dp"
                android:scaleType="fitXY"
                android:id="@+id/button1"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="300dp"
                android:layout_height="30dp" />
            <ImageView
                android:src="@drawable/un_active_round_button"
                android:layout_width="30dp"
                android:id="@+id/button2"
                android:scaleType="fitXY"
                android:layout_marginLeft="220dp"
                android:layout_marginTop="330dp"
                android:layout_height="30dp" />
            <ImageView
                android:src="@drawable/un_active_round_button"
                android:layout_width="30dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="185dp"
                android:id="@+id/button3"
                android:layout_height="30dp" />
            <ImageView
                android:src="@drawable/un_active_round_button"
                android:layout_width="30dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="340dp"
                android:layout_marginTop="210dp"
                android:id="@+id/button4"
                android:layout_height="30dp" />
            <ImageView
                android:src="@drawable/un_active_round_button"
                android:layout_width="30dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="360dp"
                android:id="@+id/button5"
                android:layout_marginTop="130dp"
                android:layout_height="30dp" />
            <ImageView
                android:src="@drawable/un_active_round_button"
                android:layout_width="30dp"
                android:scaleType="fitXY"
                android:layout_marginLeft="430dp"
                android:id="@+id/button6"
                android:layout_marginTop="160dp"
                android:layout_height="30dp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:paddingLeft="15dp"
            android:layout_weight="0.8"
            android:layout_below="@id/centerLayout"
            android:paddingRight="15dp"
            android:paddingBottom="15dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:text="Tittle"
                android:id="@+id/tittleTextView"
                android:textColor="@color/colorAccent"
                android:textSize="17sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_height="wrap_content">
            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:id="@+id/recyclerView"
                android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"></LinearLayout>
        </LinearLayout>
    </LinearLayout>







</LinearLayout>
